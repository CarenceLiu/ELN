.container{
  
  width: 100%;
  height: 100%;
  margin: 0 auto;
  overflow-y: scroll;
}

.subContainer{
  width: 95%;
  height: 50%;
  margin: 0 auto;
  overflow: scroll;
}

text{
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #ffffff;
  background-color: #F5F5F5;
  padding-left: 2%;
  height: 90rpx;
  font-size: 35rpx;
}

.text-content{
  display: flex;
  align-items: center;
  border-bottom: 4rpx solid #F5F5F5;
  padding-left: 5%;
  height: 130rpx;
  font-size: 40rpx;
}


.title{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  vertical-align: middle;
  position:relative;
  background: #f5f5f5;
  margin: 0 auto;
}

.plus{
  display: flex;
  position: absolute;
  right: 2%;
  background: #ffffff;
  width: 10%;
  height: 70rpx;
  justify-content: center;
  align-items: center;
  font-size: 50rpx;
  font-weight: 900;
}

input{
  height: 70rpx;
  border-radius: 20rpx;
  border:3rpx solid #999999;
  font-size: 35rpx;
  background: #ffffff;
  width: 75%;
  text-align: center;
}

.inputBox{
  margin-top: 5rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 70rpx;
}

.createWarning{
  background: #ffffff;
  color:red;
  height: 40rpx;
  font-size: 32rpx;
  justify-content: center;
  align-items: center;
}

.createButton{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 70rpx;
  width: 75%;
  border-radius: 25rpx;
}
