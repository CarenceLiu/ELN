.container{
  width: 95%;
  height: 100%;
  margin: 0 auto;
  overflow-y: scroll;
}


.secondContainer{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 130rpx;
  vertical-align: middle;
  position:relative;
}

.secondContainer::before{
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1px;
  transform: scaleY(.5);
  background-color: #9D9D9D;
}

.container text{
  float: left;
  color: #7B7B7B;
  margin-left: 20rpx;
  font-size: 35rpx;
}
.container .Real{

  float: right;
  text-align: right;
  margin-right: 20rpx;
  width: 50%;
  font-size: 35rpx;
}

button{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  margin-top: 5%;
  height: 100rpx;
  width: 95%;
  border-radius: 25rpx;
}